{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

<header class="container clearfix">
  <h1>
    <span class="title">{{@blog.description}}</span>
    <hr>
  </h1>
  {{#if @blog.cover}}
  <div class="blog-cover" style="
    background: url({{@blog.cover}}) no-repeat;
  "></div>
  {{/if}}
</header>

